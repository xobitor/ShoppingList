<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddList">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/NewListName_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="@string/enterListName"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/NewListName"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/NewListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:text="List Name"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewListName_input" />

</androidx.constraintlayout.widget.ConstraintLayout>